<%= form_for @folder  do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name, "Name Of This Folder." %>
    <%= f.text_field :name, placeholder: 'My Subfolder' %>

    <%= f.label :subfolder_id %>
    <%= f.select :subfolder_id, Folder.all.map { |folder|
      [folder.name, folder.id]
    } %>

  <%= f.submit "Let's do this!", class: "btn btn-large btn-success" %>
<% end %>
